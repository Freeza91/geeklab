header.top-header
    nav.navbar
      .container
        .navbar-header
          a.navbar-brand href=stores_root_path
            img src=image_path("logo/logo_store.png")
        - if current_user
          .navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              li
                a href="javascript: void(0)"
                  = current_user.email
              li
                button.btn.btn-base.btn-s.btn-rounded.navbar-btn
                  a href=stores_orders_path
                  span.icon.icon-outer-18 style="margin-bottom: -4px; margin-right: 5px"
                    i.icon-inner.icon-score
                  = current_user.credits 
              li
                a href="javascript: void(0)" data-toggle="modal" data-target="#logout-hint"
                  i.fa.fa-power-off
        - else
          button.btn.btn-base.btn-s.btn-rounded.navbar-btn.pull-right data-toggle="modal" data-target="#sign"
            | 注册/登录
