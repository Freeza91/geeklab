main.bg-green.with-top-bg role='main'
  section.content
  .container.hide#slider-width
  .container-fluid style="padding: 190px 0 70px"
    #slider style="position: relative; top: 0px; left: 0px; width: 900px;
        height: 360px;"
      div u="slides" style="cursor: move; position: absolute; left: 0px; top:
        0px; width: 900px; height: 360px;
            overflow: hidden;"
        div
          a href=get_assignment_url(current_user) target="_blank"
            img u="image" src=image_path("stores/index_bg_1.png")
        div
          a href=get_assignment_url(current_user) target="_blank"
            img u="image" src=image_path("stores/index_bg_2.png")
        div
          a href=get_assignment_url(current_user) target="_blank"
            img u="image" src=image_path("stores/index_bg_1.png")
        div
          a href=get_assignment_url(current_user) target="_blank"
            img u="image" src=image_path("stores/index_bg_2.png")
      #good-list
        ul.clearfix
          li v-repeat="good: goods"
            .good-item
              .good-price.vertical-center
                span.vertical-item
                  span.icon-img.icon-outer-18 style="margin-right: 4px; margin-bottom: -5px"
                    i.icon-inner.icon-score-old
                  | {{good.cost}}
              .good-content
                .good-img
                  a v-attr="href: '/stores/goods/' + good.id" target="_blank"
                    img v-attr="src: good.pictures[0]"
                .good-name
                  span
                    | {{good.name}}
        .prev.pagination v-on="click: prevPage" v-class="page === 1 ? 'disable' : ''" v-show="page !== 1"
          i.fa.fa-arrow-left
        .next.pagination v-on="click: nextPage" v-class="lastPage ? 'disable' : ''" v-show="!lastPage"
          i.fa.fa-arrow-right

= content_for :assets
  script src="#{asset_path('store-index-bundle.js')}"
